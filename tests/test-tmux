#!/usr/bin/ruby -w

require 'tmux'

def write_shit fout
  10.times do
    s = test_string
    until s.empty?
      len = [21, s.size].min
      prefix = s[0 ... len]
      suffix = s[len .. -1]

      fout << prefix
      s = suffix
    end
  end
  fout.flush
end

