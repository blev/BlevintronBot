child1 = fork do
  write_shit(TMux.new $stderr,0,80)
end
child2 = fork do
  write_shit(TMux.new $stderr,80,80)
end
child3 = fork do
  write_shit(TMux.new $stderr,160,80)
end

Process.wait child1
Process.wait child2
Process.wait child3
exit


